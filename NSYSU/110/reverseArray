#include <iostream>
#include <vector>

using namespace std;

void reverseArray(vector<int>& arr) {
    // 獲取陣列的長度
    int length = arr.size();

    // 只代陣列的一半，因為是交換兩端的元素
    for (int i = 0; i < length / 2; ++i) {
        // 交換陣列開始和結尾的元素
        swap(arr[i], arr[length - i - 1]);
    }
}

int main() {
    // 範例使用：
    vector<int> myArray = {1, 2, 3, 4, 5};

    reverseArray(myArray);

    cout << "反轉後的陣列:";
    for (int i = 0; i < myArray.size(); ++i) {
        cout << " " << myArray[i];
    }
    cout << endl;

    return 0;
}
